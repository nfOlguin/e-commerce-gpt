datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  SUPER_ADMIN
  HOLDING_ADMIN
  INDIVIDUAL_SELLER
  BUYER
}

enum ListingType {
  TYPE_INDIVIDUAL
  TYPE_PROJECT
}

enum ListingStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum ProjectUnitStatus {
  AVAILABLE
  RESERVED
  SOLD
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users    User[]
  listings Listing[]
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  hashedPassword String?
  googleId       String?  @unique
  avatarUrl      String?
  role           UserRole @default(BUYER)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?

  profile      UserProfile?
  listings     Listing[]     @relation("SellerListings")
  projectUnits ProjectUnit[] @relation("SellerUnits")
}

model UserProfile {
  id        String  @id @default(cuid())
  firstName String?
  lastName  String?
  phone     String?

  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}

model Listing {
  id          String        @id @default(cuid())
  slug        String        @unique
  title       String
  description String?
  images      String[]
  price       Decimal?      @db.Decimal(14, 2)
  status      ListingStatus @default(DRAFT)
  type        ListingType
  latitude    Float?
  longitude   Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?

  seller   User? @relation("SellerListings", fields: [sellerId], references: [id])
  sellerId String?

  projectUnits ProjectUnit[]
}

model ProjectUnit {
  id        String            @id @default(cuid())
  label     String
  price     Decimal?          @db.Decimal(14, 2)
  status    ProjectUnitStatus @default(AVAILABLE)
  areaM2    Float?
  metadata  Json?

  project   Listing @relation(fields: [projectId], references: [id])
  projectId String

  seller   User?   @relation("SellerUnits", fields: [sellerId], references: [id])
  sellerId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
